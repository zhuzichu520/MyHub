<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.zhuzichu.android.login.viewmodel.ViewModelLogin" />
    </data>

    <com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/app_skin_color_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/qmui_topbar_height"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:src="@mipmap/ic_login_logo" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="6dp"
                android:text="@string/username"
                android:textColor="?attr/app_skin_color_font_primary"
                android:textSize="17sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/qmui_divider_bottom_bitmap"
                android:hint="@string/username"
                android:inputType="text"
                android:paddingBottom="6dp"
                android:singleLine="true"
                android:text="@={viewModel.username}"
                android:textColor="?attr/app_skin_color_font_secondary"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="6dp"
                android:text="@string/password"
                android:textColor="?attr/app_skin_color_font_primary"
                android:textSize="17sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/qmui_divider_bottom_bitmap"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingBottom="6dp"
                android:singleLine="true"
                android:text="@={viewModel.password}"
                android:textColor="?attr/app_skin_color_font_secondary"
                android:textSize="16sp" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/login"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                app:qmuiAlphaWhenPress="@{true}"
                android:text="@string/login"
                android:textAppearance="?attr/textAppearanceButton"
                app:onClickCommand="@{viewModel.onClickLoginCommand}"
                app:qmui_isRadiusAdjustBounds="true" />

        </LinearLayout>

        <com.qmuiteam.qmui.widget.QMUITopBarLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:qmuiTopTitle="@{@string/login}" />

    </com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>

</layout>